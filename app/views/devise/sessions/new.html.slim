.user-session
  .user-session-background
    .user-form
      .user-form-header
        = t("devise.login")

      .user-form-body
        = form_for(resource, as: resource_name, url: user_session_path) do |f|
          .form-group.input-container
            = f.label :login
            = f.text_field :login, autofocus: true, placeholder: t("devise.email_placeholder"), class: "form-control"

          .form-group.input-container
            = f.label :password
            = f.password_field :password, autocomplete: "off", placeholder: "********", class: "form-control"

          - if devise_mapping.rememberable?
            .form-group.remember-me-container
              = f.check_box :remember_me, class: "checkbox"
              = f.label :remember_me, class: "checkbox-label"

          .actions
            = f.submit t("devise.login"), data: { disable_with: t("devise.login")}, class: "btn btn-primary btn-send-data"
            = link_to "Registrarse como tutor", new_tutor_register_path, class: "btn btn-primary btn-send-data btn-register-tutor"

        .links-container
          = render "devise/shared/links"
