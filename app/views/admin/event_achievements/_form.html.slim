= form_for [:admin, event] do |f|
  = render "admin/shared/form_errors",
           resource: event

  .form-group
    = f.label :title
    = f.text_field :title,
                   class: "form-control",
                   required: true

  .form-group
    = f.label :description
    = f.text_field :description,
                  class: "form-control",
                  required: true

  .form-group
    = f.label :start_date
    = f.date_field :start_date,
                class: "form-control",
                required: true

  .form-group
    = f.label :end_date
    = f.date_field :end_date,
                class: "form-control",
                required: true

  .form-group
   = f.label :message
   = f.text_area :message,
                  rows: 5,
                  class: "form-control"

  .form-group
    = f.label :user_achievement_ids
    = f.collection_select :user_achievement_ids, all_achievements, :id, :name, {include_hidden: false}, {multiple: true, class: "form-control"}

  .form-group
    = f.label :email_notify
    = f.email_field :email_notify,
                class: "form-control",
                required: true

  .nested-content-media
    = f.hidden_field :id
    = f.label :image

    .form-group
      = tooltip t("views.contents.attach_media"),
                place: "left",
                class: "btn btn-xs btn-default content-media-uploader" do
        .glyphicon.glyphicon-cloud-upload

      .hidden
        = f.file_field :image
        = f.hidden_field :image_cache

      span.content-media-name-on-form
        - if event.image?
          img src=event.image.url

  .nested-content-media
    = f.hidden_field :id
    = f.label :inactive_image

    .form-group
      = tooltip t("views.contents.attach_media"),
                place: "left",
                class: "btn btn-xs btn-default content-media-uploader" do
        .glyphicon.glyphicon-cloud-upload

      .hidden
        = f.file_field :inactive_image
        = f.hidden_field :inactive_image_cache

      span.content-media-name-on-form
        - if event.inactive_image?
          img src=event.inactive_image.url

  .actions
    = f.submit class: "btn btn-primary",
               data: { disable_with: t("views.submitting") }
