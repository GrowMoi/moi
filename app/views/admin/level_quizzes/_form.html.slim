= form_for [:admin, level_quiz] do |f|
  = render "admin/shared/form_errors",
           resource: level_quiz

  .form-group
    = f.label :name
    = f.text_field :name,
                   class: "form-control",
                   required: true

  .form-group
    = f.label :content_ids
    = f.collection_select :content_ids, contents, :id, :title, {}, {multiple: true, class: "form-control"}

  .form-group
    = f.label :description
    = f.text_field :description,
                   class: "form-control"
  .actions
    = f.submit class: "btn btn-primary",
               data: { disable_with: t("views.submitting") }
